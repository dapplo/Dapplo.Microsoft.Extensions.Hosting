        x:Class="Dapplo.Microsoft.Extensions.Hosting.Avalonia.Template.MainWindow"
        Title="Avalonia Demo Application"
        Width="800"
        Height="450">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock FontSize="24" FontWeight="Bold">Welcome to Avalonia with Generic Host!</TextBlock>
        <TextBlock TextWrapping="Wrap">
            This is a template Avalonia application using Dapplo.Microsoft.Extensions.Hosting.Avalonia

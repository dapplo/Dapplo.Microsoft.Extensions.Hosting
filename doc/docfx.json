{
  "metadata": [
    {
      "src": [
        {
		  "src": "../src",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
			"**/bin/**",
			"**/obj/**",
			"**Tests/*.csproj"
          ]
        }
      ],
      "dest": "api",
	  "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.md",
          "api/**.yml",
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "_site/**",
		  "README.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ]
      }
    ],
    "dest": "_site",
	"globalMetadata": {
		"_appTitle": "Dapplo.Microsoft.Extensions.Hosting",
		"_appLogoPath": "images/d.svg",
		"_appFaviconPath": "images/favicon.ico",
		"_appFooter": "Copyright Â© Dapplo"
	},
    "globalMetadataFiles": [],
	"template": [
      "statictoc",
	  "template"
    ],
    "fileMetadataFiles": [],
    "postProcessors": [],
    "noLangKeyword": false
  }
}